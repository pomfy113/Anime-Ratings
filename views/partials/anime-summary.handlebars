<!--  For the modal business -->

<style>
.trailer-container {
	position:relative;
	padding-bottom:56.25%;
	padding-top:30px;
	height:0;
	overflow:hidden;
}

.trailer-container iframe{
	position:absolute;
	top:0;
	left:0;
	width:100%;
	height:100%;
}

.closemodal{
    position: absolute;
    right: 5%;
    top: 5%;
    background-color: white;
    border-radius: 10px;
}

.closemodal:focus{
    outline: none;
}

.closemodal:hover{
    background-color: #dddddd;
}
/* Containing sequels/prequels*/
.related{
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    text-overflow: ellipsis;
    justify-content: space-between;
}


.clickable-list {
    border: 1px solid lightgrey;
    margin: 5px;
    padding: 5px 5px;
    font-size: 15px;
    cursor: pointer;

}


.clickable-list.prequel {
    position: relative;
    border-radius: 50% 0px 0px 50%;
    text-align: right;
    width: 40%;
}

.clickable-list.sequel {
    position: relative;
    text-align: left;
    /*transform: translate(15%);*/
    border-radius: 0px 50% 50% 0px;
    width: 40%;
}

.clickable-list > p{
    color: blue;
}

.clickable-list:hover{
    background-color: #eeeeee;
}


</style>
<div class="container-fluid" id="modal-container">
    <div class="row justify-content-center" style="text-align: center;">
    <h2>{{anime.title_english}}</h2>
    <button class="closemodal">&#10006;</button>
    <div class="related">
        {{#if prequel}}
            <div class="clickable-list prequel" id="prequel" data-id="{{prequel.id}}">
                Prequel: <p>{{prequel.title_english}}</p>
            </div>
            {{else}}
            <div style="display:hidden;"></div>
        {{/if}}
        {{#if sequel}}
            <div class="clickable-list sequel" id="sequel" data-id="{{sequel.id}}">
                Sequel: <p>{{sequel.title_english}}</p>
            </div>
            {{else}}
            <div style="display:hidden;"></div>

        {{/if}}
        </div>

    </div>

    </div>
    <div class="row justify-content-center">
        <div class="col-sm-4">
                <ul class="list-group">
                  <li class="list-group-item">{{anime.title_romaji}}</li>
                  <li class="list-group-item">{{anime.title_japanese}}</li>
                  <li class="list-group-item">{{anime.studio.0.studio_name}}</li>

                  <li class="list-group-item"><img class="img-fluid" style="max-width 200px;" src={{anime.image_url_lge}}></li>
                  <li class="list-group-item"><a href="/anime/{{anime.id}}">Details</a></li>

                  <li class="list-group-item">
                      Genres:<br>
                      {{#each anime.genres}}
                          {{this}} &nbsp; &nbsp;
                      {{/each}}
                  </li>
                </ul>

        </div>
        <div class="col-sm-8">
            Summary:
            <p class="modal-text">{{{anime.description}}}</p>
            {{#if anime.youtube_id}}
            <div class="trailer-container">
            <iframe src="http://www.youtube.com/embed/{{anime.youtube_id}}"
            frameborder="0" allowfullscreen></iframe>
               {{/if}}
           </div>

</div>
