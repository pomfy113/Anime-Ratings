<h1>Search Results</h1>
<div class="d-flex flex-column">

{{#each results}}
<div class="row">
<div class="col-sm-3 justify-content-sm-center">
        <a href="/anime/{{this.id}}">
            <img src={{this.posterImage.small}} class="img-fluid" style="margin: 0 auto; display: block;">
        </a>
</div>
    <div class="col-sm-9">
<p>

    <div style="margin-left: 20px">
        <h4>{{this.titles.canonical}}</h4>
        {{#if this.averageRating.length}}
        Average Rating:   {{this.averageRating}}<br>
        {{else}}
        No ratings available yet!
        {{/if}}
        <hr>
        {{this.synopsis}}
    </div>
</p>
</div>
</div>
<hr>
{{/each}}

</div>
