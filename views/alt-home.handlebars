<style>

.MAL-container{
    --imageHeight: 181px;
    --imageWidth: 125px;
    --textWidth: 175px;
    --titleHeight: 4em;
    --backgroundColor: #EEE;

    display: grid;
    background-color: var(--backgroundColor);
    /* grid-template-rows: repeat(8, 1fr);
    grid-template-columns: repeat(8, 1fr); */
    grid-template-rows: var(--titleHeight) var(--imageHeight);
    grid-template-columns: var(--imageWidth) var(--textWidth);

    height: calc(var(--titleHeight) + var(--imageHeight));
    width: calc(var(--imageWidth) + var(--textWidth));

    box-sizing: content-box;
    margin: 5px;
    padding: 10px 0;

    border-radius: 10px;
    border: 1px solid lightgrey;
}

.MAL-title{
    grid-column: 1/3;
    grid-row: 1;
    font-size: 14px;
    color: #111111;
    line-height: 16px;
    text-align: center;
    text-justify: distribute;
}

.MAL-image{
    height: var(--imageHeight);
    width: var(--imageWidth);
    grid-column: 1;
    grid-row: 2;
}

.MAL-summary{
    background-color: white;
    font-size: 10px;
    overflow-y: scroll;
    padding: 0px;
    grid-column: 2;
    grid-row: 2;
    border-left: 1px solid var(--backgroundColor);

}

.MAL-summary p{
    padding: 5px;
}

/* Title stuff  */

.MAL-name{
    height: 2.5em;
}

.MAL-name h2{
    font-size: 15px;
}

.MAL-title-data{
    color: darkgrey;
    font-size: 12px;
}

span.producer:after{
    content: ', ';
}

span.producer:last-of-type:after {
    content: '';
}

/* Buttons */
.MAL-buttons{
    display: flex;
    width: 100%;
    justify-content: space-around;

}

.MAL-buttons div{
    width: calc(100%/3);
    border-right: 1px solid lightgrey;
    border-bottom: 1px solid lightgrey;
    font-weight: 600;
    text-align: center;
}

.MAL-buttons div:hover{
    cursor: pointer;
}

.MAL-buttons div:last-of-type{
    border-right: none;
}


</style>
<div class="d-flex flex-row flex-wrap justify-content-center">
{{#each MAL_TV}}
    <div class="MAL-container">
        <div class="MAL-title">
            <div class="MAL-name"><h2>{{this.title}}<h1></div>
            <div class="MAL-title-data">
                {{#each this.producers}}
                    <span class="producer">{{this}}</span>
                {{/each}} | {{this.nbEp}} eps | {{this.fromType}}
            </div>
        </div>
        <img class="MAL-image" src="{{this.picture}}">
        <div class="MAL-summary">
            <div class="MAL-buttons">
                <div>Story</div>
                <div>Score</div>
                <div>Airing</div>
            </div>

            <p>{{this.synopsis}}</p>
        </div>
    </div>
{{/each}}
</div>
