<!-- views/reviews-show.handlebars -->
<!-- Basic showing stuff -->
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <h1>{{review.title}}</h1>
    <h5>{{review.showTitle}}</h5>
    <p>Rating: {{review.rating}} out of 5</p>
    <p>{{review.description}}</p>
</div>
<div class="col-sm-8 col-sm-offset-2" style="padding-top: 100px;">
    <!--  Comments stuff with panels-->
    <h4>Comments</h4>
    {{#each review.comment}}
        <div class="panel panel-default" style="width: 100%;">
            <div class="panel-heading">User Rating: {{this.reviewrating}} out of 5</div>
            <div class="panel-body">{{this.words}}</div>
        </div>
    {{/each}}
    </div>
</div>


<div class="col-sm-6 col-sm-offset-3">
<form method="POST" action="/reviews/{{review._id}}?_method=PUT">
  <label for="words">New Comment</label><br>
  <textarea class="form-control" name="words" rows="10" /></textarea>
  <select class="form-control" name="reviewrating">
      <option value=3 selected disabled hidden>Rating Score</option>
      <option value=1>1 - Bad</option>
      <option value=2>2 - Meh</option>
      <option value=3>3 - Okay</option>
      <option value=4>4 - Pretty good</option>
      <option value=5>5 - GOAT</option>
  </select>
  <p>
      <button style="float:left;" type="submit" class="btn btn-primary">Save Comment</button>
  </p>
</form>
</div>
