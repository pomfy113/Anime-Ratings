<div class="row">
    <div class="col-sm-4"></div>

  <div class="col-sm-4">
    <form method="POST" action="/login">
      <legend>Login</legend>
      <div class="form-group">
        <label for="user-name"><em>Username</em></label>
        <input id="user-name" type="text" name="username" class="form-control" ></input>
