        <label for="user-pass"><em>Password</em></label>
        <input id="user-pass"type="password" name="password" class="form-control"></input>
      </div>

      <div class='text-right form-group'>
        <button type="submit" class="btn btn-primary">Reply</button>
      </div>

    </form>
  </div>
</div>
